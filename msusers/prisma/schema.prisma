generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(uuid())
  email          String    @unique
  password       String
  name           String
  birthDatetime  DateTime  @db.Date
  cpf            String
  phoneNumber    String
  roles          Role[]
  isActive       Boolean   @default(false)
  activationCode String
  deletedAt      DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Role {
  id        String    @id @default(uuid())
  name      String    @unique
  deletedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  users     User[]
}
