generator client {
  provider = "prisma-client-js"
  output = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EventStatus {
  DRAFT
  PENDING
  ARCHIVED
  PUBLISHED
  CANCELLED
}

enum EventType {
  MEETING
  CONFERENCE
  WORKSHOP
  PARTY
}

model tb_event {
  id          String     @id @default(uuid())
  title       String
  description String?
  start_at    DateTime
  end_at      DateTime?
  location    String?
  status      EventStatus @default(DRAFT)
  event_type  EventType   @default(MEETING)
  batches     tb_batch[]  @relation("tb_events_batches")
  created_at  DateTime    @default(now())
  updated_at  DateTime    @updatedAt
}

model tb_batch {
  id         String   @id @default(uuid())
  name       String
  price      Int
  capacity   Int
  sold       Int      @default(0)
  event_id   String
  event      tb_event @relation(fields: [event_id], references: [id], name: "tb_events_batches")
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
